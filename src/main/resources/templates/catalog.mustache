<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Catalog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Menu</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/catalog">Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/offers">Sales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carrito">Shopping cart</a>
                </li>
            </ul>

            <!-- Barra de b칰squeda -->
            <form class="d-flex" method="GET" action="/catalog">
                <input class="form-control me-2" type="search" name="q" placeholder="Buscar producto..." aria-label="Buscar">
                <button class="btn btn-outline-light" type="submit">Buscar</button>
            </form>
        </div>
    </div>
</nav>
<div class="container mt-5">
    <h2 class="mb-4">Collectibles</h2>
    <div class="row">
        {{#items}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/img/{{foto}}" class="card-img-top" alt="{{nombre}}">
                    <div class="card-body">
                        <h5 class="card-title">{{nombre}}</h5>
                        <p class="card-text">
                            {{#oferta}}
                                <span class="text-muted text-decoration-line-through">${{precioOriginal}}</span>
                                <span class="fw-bold text-danger ms-2">${{prec}}</span>
                            {{/oferta}}
                            {{^oferta}}
                                <span class="fw-bold">${{prec}}</span>
                            {{/oferta}}
                        </p>


                        <!-- Bot칩n para ver m치s -->
                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal{{id}}">See more</button>

                        <!-- Bot칩n para agregar al carrito -->
                        <form method="POST" action="/carrito/add" class="d-inline">
                            <input type="hidden" name="id" value="{{id}}">
                            <button type="submit" class="btn btn-outline-dark">游 Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Modal para ver m치s -->
            <div class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="modalLabel{{id}}" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel{{id}}">{{nombre}}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <img src="/img/{{foto}}" class="card-img-top" alt="{{nombre}}">
                            <p>{{descripcion}}</p>
                            <p><strong>Precio:</strong> ${{prec}}</p>
                            <p><strong>ID:</strong> {{id}}</p>
                        </div>
                        <div class="modal-footer">
                            <form method="POST" action="/api/carrito">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="btn btn-success">Add to cart</button>
                            </form>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/items}}
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>