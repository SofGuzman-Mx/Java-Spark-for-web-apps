<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale-1.0">
    <title>Register - E-commerce</title>
    <!-- We include Tailwind CSS from a CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

<div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Create an Account</h2>

    <!-- Le añadimos un ID al formulario -->
    <form id="registerForm" action="/api/register" method="POST">
        <!-- Los campos del formulario se quedan igual -->
        <div class="mb-4">
            <label for="nombre" class="block text-gray-700 font-bold mb-2">Username</label>
            <input type="text" id="nombre" name="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., carlos123" required>
        </div>
        <div class="mb-4">
            <label for="numero" class="block text-gray-700 font-bold mb-2">Phone Number</label>
            <input type="tel" id="numero" name="numero" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., 5551234567">
        </div>
        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input type="password" id="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="********" required>
        </div>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline transition duration-200">
            Register
        </button>
    </form>
    <p class="mt-4 text-center text-gray-600">
        Already have an account? <a href="/login" class="text-blue-600 hover:underline">Log In</a>
    </p>
</div>

<!-- ===== SECCIÓN DE JAVASCRIPT AÑADIDA ===== -->
<script>
    // 1. Obtenemos el formulario de registro por su ID
    const registerForm = document.getElementById('registerForm');

    // 2. Añadimos el "escuchador" para el evento de envío
    registerForm.addEventListener('submit', function(event) {

        // 3. Prevenimos que la página se recargue
        event.preventDefault();

        // 4. Recolectamos los datos del formulario
        const formData = new FormData(registerForm);

        // 5. Usamos Fetch para enviar los datos a /api/register
        fetch('/api/register', {
            method: 'POST',
            body: new URLSearchParams(formData)
        })
        .then(response => {
            // Si la respuesta es exitosa, procesamos el JSON
            if (response.ok) {
                return response.json();
            }
            // Si hay un error, obtenemos el mensaje del JSON de error y lo lanzamos
            return response.json().then(errorData => {
                throw new Error(errorData.message || 'An unknown registration error occurred.');
            });
        })
        .then(data => {
            // Si el registro fue exitoso, redirigimos
            if (data.success && data.redirectUrl) {
                // Opcional: mostrar un mensaje de éxito antes de redirigir
                alert('Registration successful! You will now be redirected to the login page.');
                window.location.href = data.redirectUrl;
            }
        })
        .catch(error => {
            // Si hubo cualquier error, mostramos la alerta
            console.error('Registration Error:', error);
            alert(error.message);
        });
    });
</script>

</body>
</html>